    "version": "0.2.0",
    "configurations": [        

        {
            "type": "node",
            "request": "launch",
            "name": "Debug Express API",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "skipFiles": ["<node_internals>/**"],
            // "program": "${workspaceFolder}/src/app.ts",
            // "preLaunchTask": "tsc: build - ./tsconfig.json",
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "cwd": "${workspaceFolder}",
            // "protocol": "inspector",
            "sourceMaps": true,
            "env": {
                "PORT": "3333",
                "NODE_ENV": "development"
              }
        }
    ]
}